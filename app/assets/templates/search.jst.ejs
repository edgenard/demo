<h1>Search!</h1>

<label>
	Query
	<input type="text" class="query">
</label>

<section class="results">

	<% results.each(function (result) { %>
		<article>
			<% if (result instanceof Demo.Models.User) { %>

				<%= result.escape("email") %>

			<% } else { %>

				<header>
					<%= result.escape("title") %>
				</header>

				<p><%= result.escape("body") %></p>

			<% } %>
		</article>
	<% }) %>
</section>